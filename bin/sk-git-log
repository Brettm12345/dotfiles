#!/usr/bin/env bash

git log --color=always --format="%C(auto)%h%d %s %C(black)%C(bold)%cr" "$@" | \
  sk --ansi --no-sort --tiebreak=index --bind=ctrl-s:toggle-sort \
     --bind "ctrl-m:execute:
               (grep -o '[a-f0-9]\{7\}' | head -1 |
               xargs -I % sh -c 'git show --color=always % | less -R') << 'SK-EOF'
               {}
SK-EOF"
